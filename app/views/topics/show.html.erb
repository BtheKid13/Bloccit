<h1><%= @topic.name %></h1>
<p class="lead">
  <%= render partial: "labels/list", locals: { labels: @topic.labels } %>
  <br />
  <%= @topic.description %>
<p/>

<div class="row">
  <div class="col-md-8">
    <%= render @topic.posts %>
  </div>

  <div class="col-md-4">
    <% if user_can_edit_topics? || user_can_destroy?(@post) %>
      <h3> Topic Actions </h3>
    <% end %>
    <% if user_can_edit_topics? %>
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success btn-block' %>
    <% end %>
    <% if user_can_destroy?(@post) %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger btn-block', data: {confirm: 'Are you sure that you want to delete this topic?'} %>
    <% end %>
    <% if user_can_destroy?(@post) %>
      <h3> Post Actions </h3>
    <% end %>
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success btn-block' %>
    <% if user_can_destroy?(@post) %>
      <%= link_to "Delete Post", [@topic], method: :delete, class: 'btn btn-danger btn-block', data: { confirm: "Are you sure that you want to delete this topic?"} %>
    <% end %>
  </div>
</div>
